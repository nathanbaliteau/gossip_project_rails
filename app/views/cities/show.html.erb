<br/>
<div class="starter-template text-center mx-auto">
  <h2> Voici tous les commérages à <%= @city.name %> :</h2>
</div>
<br/> <br/>
<% @city.users.each do |user| %>
	<% user.gossips.each do |gossip| %>
	  <div class="container text-center">    
		  <div class="row">
				<div class="col-sm-6">
				  <div class="well">
				  	<p> <%= gossip.user.first_name %> </p>
				  </div>
				</div>
				<div class="col-sm-6">
				  <div class="well">
				    <p> <%= gossip.title %> </p>
				    <p> <%= link_to '(voir le potin)', gossip_path(gossip.id) %> </p>
				  </div>
				</div>
			</div>
		</div>
	<% end %>
<% end %>
