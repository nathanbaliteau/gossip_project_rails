<% if @gossip.errors.any? %>
  <p class="alert alert-danger d-flex justify-content-center" role="alert">  
    Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :
  </p>
  <% @gossip.errors.full_messages.each do |message| %>
    <p class="alert alert-danger d-flex justify-content-center" role="alert">  
    <%= message %>
    </p>
  <% end %>
<% end %>

<br/>
<div class="starter-template text-center mx-auto">
  <h2> Lâche-toi et livre nous ton dernier potin ! </h2>
</div>
<br/> <br/>

<div class="container text-center">
  <%= form_tag url_for(action: 'create'), method: "post" do %>
    
    <div class="form-group">
      <%= label_tag 'Titre du potin : ' %>
      <p> <%= text_field_tag 'title', @gossip.title %> </p>
    </div>
    <br />
    <div class="form-group">
      <%= label_tag 'Votre potin : ' %>
      <p> <%= text_area_tag 'content', @gossip.title %> </p>
    </div>
    <br />

    <input type="hidden" name="user" value=<%= User.first.id %>>

    <%= submit_tag "Create Post" %>

  <% end %>
</div>