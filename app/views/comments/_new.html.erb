<div class="container" style="margin-top: 30px; width: 620px">
  <%= form_tag gossip_comments_path(@gossip), method: "post" do %>
    
    <div class="form-group">
      <%= label_tag 'Commentaire :' %>
      <%= text_field_tag :content, @comment.content, class: "form-control" %>
    </div>

    <input type="hidden" name="user" value=<%= User.first.id %>>

    <%= submit_tag "Commenter", class: "btn btn-secondary" %>

  <% end %>
</div>